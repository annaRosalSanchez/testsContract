{
  "compileOnSave": false,
  "compilerOptions": {
    "noLib": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2016", "dom", "esnext.asynciterable"],
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
